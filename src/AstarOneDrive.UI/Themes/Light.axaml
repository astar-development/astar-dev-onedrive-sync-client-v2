<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <ResourceDictionary>

  <!-- Base colors -->
  <Color x:Key="Color_Background">#FFFFFFFF</Color>
  <Color x:Key="Color_Foreground">#FF000000</Color>
  <Color x:Key="Color_Primary">#FF0078D4</Color>
  <Color x:Key="Color_CardBackground">#FFF3F3F3</Color>
  <Color x:Key="Color_TerminalBackground">#FF1E1E1E</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="AppBarBackground" Color="{DynamicResource Color_Primary}" />
  <SolidColorBrush x:Key="DrawerBackground" Color="#FFEFEFEF" />
  <SolidColorBrush x:Key="CardBackground" Color="{DynamicResource Color_CardBackground}" />
  <SolidColorBrush x:Key="TerminalBackground" Color="{DynamicResource Color_TerminalBackground}" />
  <SolidColorBrush x:Key="TerminalBarBackground" Color="#FF333333" />
  <SolidColorBrush x:Key="TerminalStatusBackground" Color="#FF111111" />

  <!-- Text defaults -->
  <SolidColorBrush x:Key="ThemeForegroundBrush" Color="{DynamicResource Color_Foreground}" />
  <SolidColorBrush x:Key="ThemeBackgroundBrush" Color="{DynamicResource Color_Background}" />

</ResourceDictionary>
</Styles>
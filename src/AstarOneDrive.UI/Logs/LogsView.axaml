<UserControl
    x:Class="AstarOneDrive.UI.Logs.LogsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:AstarOneDrive.UI.Logs"
    x:DataType="vm:LogsViewModel"
    x:Name="root">

    <Border Margin="8" Padding="8"
            Background="{DynamicResource TerminalBackground}"
            CornerRadius="4">

        <ScrollViewer>
            <TextBlock Text="{Binding LogText}"
                       FontFamily="Consolas, Courier New, monospace"
                       FontSize="12"
                       TextWrapping="Wrap" />
        </ScrollViewer>

    </Border>
</UserControl>

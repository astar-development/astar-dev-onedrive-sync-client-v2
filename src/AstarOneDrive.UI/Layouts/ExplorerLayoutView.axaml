<UserControl
    x:Class="AstarOneDrive.UI.Layouts.ExplorerLayoutView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:AstarOneDrive.UI.Layouts"
    xmlns:account="using:AstarOneDrive.UI.AccountManagement"
    xmlns:folder="using:AstarOneDrive.UI.FolderTrees"
    xmlns:sync="using:AstarOneDrive.UI.SyncStatus"
    x:DataType="vm:ExplorerLayoutViewModel">

    <DockPanel>

        <!-- Top Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="{DynamicResource Menu_File}">
                <MenuItem Header="{DynamicResource Menu_UserSettings}" />
                <MenuItem Header="{DynamicResource Menu_AppSettings}" />
            </MenuItem>

            <MenuItem Header="{DynamicResource Menu_Layouts}">
                <MenuItem Header="Explorer" />
                <MenuItem Header="Dashboard" />
                <MenuItem Header="Terminal" />
            </MenuItem>
        </Menu>

        <!-- Bottom Status Bar -->
        <Border DockPanel.Dock="Bottom" Padding="8,4">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="{Binding SyncSummary}" />
                <Separator Width="1" />
                <TextBlock Text="{Binding CurrentTheme}" />
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid ColumnDefinitions="250,*">
            <!-- Left: Folder Tree -->
            <folder:FolderTreeView />

            <!-- Right: Account Details + Sync Status -->
            <Grid RowDefinitions="Auto,*">
                <account:AccountListView Grid.Row="0" />
                <sync:SyncStatusView Grid.Row="1" />
            </Grid>
        </Grid>

    </DockPanel>
</UserControl>

<UserControl
    x:Class="AStar.Dev.OneDrive.Sync.Client.UI.Settings.SettingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:AStar.Dev.OneDrive.Sync.Client.UI.Settings"
    x:DataType="vm:SettingsViewModel"
    Foreground="{DynamicResource ThemeForegroundBrush}">

    <StackPanel Margin="12" Spacing="16">

        <TextBlock Text="{DynamicResource Settings_Title}"
                   FontWeight="Bold"
                   FontSize="18" 
                   Foreground="{DynamicResource ThemeForegroundBrush}" />

        <Border Padding="8" CornerRadius="4" Background="{DynamicResource CardBackground}">
            <StackPanel Spacing="8">
                <TextBlock Text="{DynamicResource Settings_User}" FontWeight="Bold" Foreground="{DynamicResource ThemeForegroundBrush}" />
                <TextBlock Text="{DynamicResource Settings_UserName}" Foreground="{DynamicResource ThemeForegroundBrush}" />
                <TextBox Text="{Binding UserName, Mode=TwoWay}" />

                <TextBlock Text="{DynamicResource Settings_Language}" Foreground="{DynamicResource ThemeForegroundBrush}" />
                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                          SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" />
            </StackPanel>
        </Border>

        <Border Padding="8" CornerRadius="4" Background="{DynamicResource CardBackground}">
            <StackPanel Spacing="8">
                <TextBlock Text="{DynamicResource Settings_App}" FontWeight="Bold" Foreground="{DynamicResource ThemeForegroundBrush}" />
                <TextBlock Text="{DynamicResource Settings_Theme}" Foreground="{DynamicResource ThemeForegroundBrush}" />
                <ComboBox ItemsSource="{Binding AvailableThemes}"
                          SelectedItem="{Binding SelectedTheme, Mode=TwoWay}" />

                <TextBlock Text="{DynamicResource Settings_Layout}" Foreground="{DynamicResource ThemeForegroundBrush}" />
                <ComboBox ItemsSource="{Binding AvailableLayouts}"
                          SelectedItem="{Binding SelectedLayout, Mode=TwoWay}" />
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="{DynamicResource Btn_OK}" Command="{Binding OkCommand}" Foreground="{DynamicResource ThemeForegroundBrush}" />
            <Button Content="{DynamicResource Btn_Cancel}" Command="{Binding CancelCommand}" Foreground="{DynamicResource ThemeForegroundBrush}" />
            <Button Content="{DynamicResource Btn_Apply}" Command="{Binding ApplyCommand}" Foreground="{DynamicResource ThemeForegroundBrush}" />
        </StackPanel>

    </StackPanel>
</UserControl>
